<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwite">



        <ImageView
            android:id="@+id/img_classitem"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/onedp"
            android:layout_marginRight="@dimen/onedp"
            android:layout_marginTop="@dimen/onedp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/txt_classitemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_classitem"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/onedp"
            android:ellipsize="end"
            android:maxLength="10"
            android:maxLines="1"
            android:textSize="@dimen/twelve" />
</RelativeLayout>