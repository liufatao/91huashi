<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwite"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/cb_caritem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tendp"
        android:layout_marginTop="30dp"
        android:button="@drawable/checkbox_selector" />

    <ImageView
        android:id="@+id/img_shopcarcommtity"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/tendp"
        android:layout_marginTop="@dimen/tendp"
        android:layout_toRightOf="@+id/cb_caritem" />

    <TextView
        android:id="@+id/txt_shopcartitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tendp"
        android:layout_marginTop="@dimen/tendp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/img_shopcarcommtity"
        android:maxEms="30"
        android:text="美丽的鲜花一大朵"
        android:textColor="@color/colorblack" />

    <TextView
        android:id="@+id/txt_shopcartmodel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_shopcartitle"
        android:layout_marginLeft="@dimen/tendp"
        android:layout_marginTop="@dimen/fivedp"
        android:layout_toRightOf="@id/img_shopcarcommtity"
        android:maxEms="30"
        android:text="型号：4545型号"
        android:textColor="@color/colorsmoke" />

    <TextView
        android:id="@+id/txt_shopcarpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_shopcartmodel"
        android:layout_marginLeft="@dimen/tendp"
        android:layout_marginTop="@dimen/fivedp"
        android:layout_toRightOf="@id/img_shopcarcommtity"
        android:paddingBottom="@dimen/tendp"
        android:text="￥15.00"
        android:textColor="@color/colormainren" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_shopcartmodel"
        android:layout_marginRight="@dimen/tendp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/tendp">

        <TextView
            android:id="@+id/txt_munus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twentydp"
            android:background="@drawable/minus_shape"
            android:focusable="false"
            android:paddingBottom="@dimen/tendp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="@dimen/tendp"
            android:text="-"
            android:textColor="@color/colorblack" />

        <TextView
            android:id="@+id/txt_num"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/plus_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/colorblack" />

        <TextView
            android:id="@+id/txt_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tendp"
            android:background="@drawable/plus_shape"
            android:focusable="false"
            android:padding="10dp"
            android:text="+"
            android:textColor="@color/colorblack" />

    </LinearLayout>


</RelativeLayout>