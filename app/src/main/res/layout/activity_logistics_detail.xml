<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_logistics_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huashi.app.activity.LogisticsDetailActivity">

    <RelativeLayout
        android:id="@+id/ry_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colormainren">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/tendp"
            android:paddingLeft="@dimen/tendp"
            android:paddingRight="@dimen/tendp"
            android:paddingTop="@dimen/tendp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="物流详情"
            android:textColor="@color/colorwite"
            android:textSize="@dimen/fifteensp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_commodity"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/tendp"
            />

        <TextView
            android:id="@+id/txt_commodityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tendp"
            android:layout_toRightOf="@id/img_commodity"
             />

        <TextView
            android:id="@+id/txt_waybillnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_commodityname"
            android:layout_marginTop="@dimen/fivedp"
            android:layout_toRightOf="@id/img_commodity"
             />

        <TextView
            android:id="@+id/txt_logisticscompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_waybillnumber"
            android:layout_marginTop="@dimen/fivedp"
            android:layout_toRightOf="@id/img_commodity"
             />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_logistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:paddingTop="10dp"
        ></ListView>
</LinearLayout>
