<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@color/colorblack"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/twentydp"
        android:layout_marginRight="@dimen/twentydp"
        android:alpha="1"
        android:background="@drawable/messageshape"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/tendp"
            android:text="确认删除"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/twentydp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/onedp"
            android:layout_marginTop="@dimen/tendp"
            android:background="@color/colorsmoke"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twentydp"
            android:layout_marginTop="@dimen/tendp"
            android:text="是否删除选中商品？"
            android:textColor="@color/colorblack"
            android:textSize="17dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tendp"
            android:layout_marginTop="@dimen/twentydp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fiftydp"
                android:background="@drawable/cancel_shop"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/fiftydp"
                android:background="@drawable/confirm_shop"
                android:text="@string/confirmname"
                android:textColor="@color/colorwite" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>