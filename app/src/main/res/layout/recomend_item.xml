<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/fivedp"
    android:layout_marginRight="@dimen/fivedp"
    android:background="@color/colorwite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_recomend"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/load"
        android:layout_marginTop="@dimen/tendp" />

    <TextView
        android:id="@+id/txt_recomendname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_recomend"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxEms="5"
        android:singleLine="true"
        android:text="鲜花" />

    <TextView
        android:id="@+id/txt_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_recomendname"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/tendp"

        android:text="￥180.00"
        android:textColor="@color/colormainren" />

</RelativeLayout>