<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



        <com.huashi.app.library.meg7.widget.CustomShapeSquareImageView
            android:id="@+id/img_commodity"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/tendp"
            android:layout_marginTop="@dimen/fivedp"
             />

        <TextView
            android:id="@+id/txt_commodity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tendp"
            android:layout_marginTop="@dimen/tendp"
            android:layout_toRightOf="@id/img_commodity"
            android:textColor="@color/colorsmoke" />

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_commodity_title"
            android:layout_marginLeft="@dimen/tendp"
            android:layout_toRightOf="@id/img_commodity"
            android:ellipsize="end"
            android:maxEms="18"
            android:paddingTop="@dimen/fivedp"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_comment"
            android:layout_marginLeft="@dimen/tendp"
            android:layout_toRightOf="@id/img_commodity"
            android:paddingTop="@dimen/fivedp"
            android:textColor="@color/colorsmoke" />





</RelativeLayout>